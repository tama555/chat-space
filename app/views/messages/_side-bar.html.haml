.Side-bar
  .Side-bar__user--name
    .Top-items
      .Top-items__name
        =current_user.name
      .Top-items__icons
        .Top-items__icons--edit
          = link_to new_group_path do
            = icon('far', 'edit')
        .Top-items__icons--cog
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')

  .Side-bar__group--list
    .group-lists
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .group-list__name
            = group.name
          .group-list__message
            = group.show_last_message