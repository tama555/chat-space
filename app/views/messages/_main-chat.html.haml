.Main-chat
  .Main-chat__group--info
    .header-list
      .header-list__left
        .header-list__left--group
          = @group.name
        .header-list__left--member
          Menber:
          - @group.group_users.each do |group_user|
            = group_user.user.name

      .header-list__right
        = link_to edit_group_path(@group.id) do
          Edit
    
  .Main-chat__message--list
    = render @messages

  .fotter
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .chat-box
        = f.text_field :content, class: 'chat-box__main--text', placeholder: 'type a message'
        = f.label :image, class: 'chat-box__label--image' do
          = icon('far', 'image')
          = f.file_field :image, class:'filesend'
      = f.submit 'Send', class: 'send-box'


